{
  "name": "stac-validator",
  "author": "Sparkgeo <hi@sparkgeo.com>",
  "version": "0.2.0",
  "repository": {
    "type": "github",
    "url": "https://github.com/sparkgeo/node-stacvalidator"
  },
  "description": "A node implementation of stac-validator",
  "keywords": [
    "stac-spec",
    "stac",
    "remote sensing",
    "earth observation",
    "geospatial"
  ],
  "main": "dist/index.js",
  "bin": {
    "stac-validator": "./dist/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "prettier": "prettier -- --write -l --loglevel error 'src/**/*.js'",
    "lint": "node_modules/.bin/eslint src/ --fix --ext .js",
    "test": "jest src",
    "build": "babel src --out-dir dist",
    "coverage": "jest --collectCoverageFrom=src/**.js --coverage src",
    "prepublishOnly": "npm run build && printf '%s\n%s\n' '#!/usr/bin/env node' '' \"$(cat dist/index.js)\" > dist/index.js"
  },
  "license": "Apache License 2.0",
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "ajv": "^6.6.2",
    "axios": "^0.18.0",
    "chalk": "^2.4.2",
    "lodash": "^4.17.11",
    "luxon": "^1.9.0",
    "optimist": "^0.6.1",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-regenerator": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.5",
    "eslint": "^5.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^1.2.1",
    "jest": "^24.5.0",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
