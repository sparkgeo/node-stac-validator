{
  "name": "node-stacvalidator",
  "version": "0.0.1",
  "description": "A Node-based Version of stac-validator",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "prettier": "prettier -- --write 'src/**/*.js'",
    "lint": "node_modules/.bin/eslint . --fix --ext .js",
    "test": "jest src",
    "coverage": "jest --collectCoverageFrom=src/**.js --coverage src"
  },
  "author": "Brian Bancroft",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^6.1.0"
  },
  "devDependencies": {
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run lint"
    }
  }
}
