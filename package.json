{
  "name": "@sparkgeo/stac-validator",
  "author": "Sparkgeo <hi@sparkgeo.com>",
  "repository": {
    "type": "github",
    "url": "https://github.com/sparkgeo/node-stacvalidator"
  },
  "version": "0.1.0",
  "description": "A node implementation of stac-validator",
  "keywords": ["stac-spec", "stac", "remote sensing", "earth observation", "geospatial"],
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "prettier": "prettier -- --write -l --loglevel error 'src/**/*.js'",
    "lint": "node_modules/.bin/eslint src/ --fix --ext .js",
    "test": "jest src",
    "coverage": "jest --collectCoverageFrom=src/**.js --coverage src",
    "transpile": "webpack",
    "prepublishOnly": "npm run transpile"
  },
  "license": "Apache License 2.0",
  "dependencies": {
    "ajv": "^6.6.2",
    "axios": "^0.18.0",
    "lodash": "^4.17.11",
    "luxon": "^1.9.0",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-regenerator": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "eslint": "^5.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^1.2.1",
    "jest": "^24.5.0",
    "prettier": "^1.15.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint",
      "post-commit": "npm run prettier"
    }
  }
}
